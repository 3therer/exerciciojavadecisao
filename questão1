package lacoDecisao;

import java.util.Scanner;

public class Questao1 {

	public static void main(String[] args) 
	{
    int n1,n2,n3;
		
		Scanner leia = new Scanner (System.in);
				
		System.out.println("\nInsira o primeiro número: ");
		n1 = leia.nextInt();
		System.out.println("\nInsira o segundo número: ");
		n2 = leia.nextInt();
		System.out.println("\nInsira o terceiro número: ");
		n3 = leia.nextInt();
		
		if(n1>n2 && n1>n3)
		{
			System.out.println("\nO maior valor foi: "+n1);
		} else if(n2>n1 && n2>n3)
		{
			System.out.println("\nO maior valor foi: "+n2);
		} 
		else
		{ 
			System.out.println("\nO maior valor foi: "+n3);
		}
	}
		

	}
